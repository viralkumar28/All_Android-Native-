<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SpinnerExample"
        android:orientation="vertical">

    <TextView
            android:id="@+id/spinnerTextView"
            android:layout_width="match_parent"
            android:text="Select a option"
            android:textSize="@dimen/_25ssp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
    <Spinner
            android:id="@+id/sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:minHeight="@dimen/_48sdp"/>

    <AutoCompleteTextView
            android:id="@+id/autoCompleteTxt"
            android:hint="Auto Complete"
            android:layout_margin="@dimen/_77sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:minHeight="@dimen/_48sdp"/>

</LinearLayout>